{
  "name": "imagelinks",
  "version": "0.0.1",
  "description": "Extract QR codes and URLs from images",
  "author": "Brian Cantoni",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{js,json,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,html,css}\"",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --x64 --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["electron", "qrcode", "ocr", "url-extractor"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "jimp": "^0.22.10",
    "jsqr": "^1.4.0",
    "tesseract.js": "^5.0.4"
  },
  "build": {
    "appId": "com.imagelinks.app",
    "productName": "ImageLinks",
    "copyright": "Copyright Â© 2025 Brian Cantoni",
    "files": ["src/**/*", "package.json"],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "fileAssociations": [
      {
        "ext": ["jpg", "jpeg"],
        "name": "JPEG Image",
        "role": "Viewer"
      },
      {
        "ext": "png",
        "name": "PNG Image",
        "role": "Viewer"
      },
      {
        "ext": "heic",
        "name": "HEIC Image",
        "role": "Viewer"
      },
      {
        "ext": "webp",
        "name": "WebP Image",
        "role": "Viewer"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
